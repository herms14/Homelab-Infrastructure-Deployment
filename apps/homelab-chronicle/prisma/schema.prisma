generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Core Models
// ============================================================================

model Event {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  content   String   // Rich text HTML from TipTap
  category  String   // "infrastructure", "service", "milestone", "fix", "documentation", "network", "storage"
  icon      String?  // Optional Lucide icon name
  tags      String   @default("[]") // JSON array of tags
  source    String?  // "manual", "git", "changelog", "gitlab", "prometheus", "watchtower", "ansible", "discord"
  sourceRef String?  // Git SHA, webhook ID, or other reference

  // Service dependency tracking
  services           String   @default("[]") // JSON array of affected service names
  infrastructureNode String?  // Node/host this event relates to (e.g., "node01", "docker-media")

  // Before/After comparison
  beforeImageId String?
  afterImageId  String?

  // Code snippets stored as JSON array
  codeSnippets String @default("[]") // JSON: [{language, code, filename}]

  // Relations
  images      Image[]
  attachments Attachment[]
  versions    EventVersion[]

  // Self-referential many-to-many for linked events
  linkedTo    EventLink[] @relation("LinkedFrom")
  linkedFrom  EventLink[] @relation("LinkedTo")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Full-text search virtual table managed separately
}

model Image {
  id        String   @id @default(cuid())
  filename  String
  path      String
  altText   String?
  imageType String   @default("general") // "general", "before", "after", "screenshot"
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Attachment {
  id          String   @id @default(cuid())
  filename    String
  path        String
  mimeType    String
  size        Int      // bytes
  description String?
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model Category {
  id    String @id @default(cuid())
  name  String @unique
  color String // Hex color for timeline
  icon  String // Lucide icon name
}

// ============================================================================
// Event Linking (Related Events)
// ============================================================================

model EventLink {
  id           String @id @default(cuid())
  fromEventId  String
  toEventId    String
  linkType     String @default("related") // "related", "caused_by", "resolved_by", "continuation"
  description  String?

  fromEvent Event @relation("LinkedFrom", fields: [fromEventId], references: [id], onDelete: Cascade)
  toEvent   Event @relation("LinkedTo", fields: [toEventId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([fromEventId, toEventId])
}

// ============================================================================
// Version History
// ============================================================================

model EventVersion {
  id        String   @id @default(cuid())
  eventId   String
  version   Int
  title     String
  content   String
  category  String
  tags      String
  changedBy String?  // User email or "system"
  changeNote String? // Description of what changed
  snapshot  String   // Full JSON snapshot of event at this version

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([eventId, version])
}

// ============================================================================
// Event Templates
// ============================================================================

model EventTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  category    String
  icon        String?
  tags        String   @default("[]") // JSON array
  content     String   // Default content template with placeholders
  services    String   @default("[]") // JSON array of default services
  isBuiltIn   Boolean  @default(false) // System templates vs user-created

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================================
// Webhook & Integration Logs
// ============================================================================

model WebhookLog {
  id          String   @id @default(cuid())
  source      String   // "gitlab", "prometheus", "watchtower", "ansible", "discord"
  eventType   String   // "push", "alert", "update", "playbook", etc.
  payload     String   // Raw JSON payload
  processed   Boolean  @default(false)
  eventId     String?  // Created event ID if successful
  error       String?  // Error message if failed
  ipAddress   String?

  createdAt DateTime @default(now())
}

// ============================================================================
// Infrastructure Nodes (for dependency graph)
// ============================================================================

model InfrastructureNode {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "node01", "docker-media", "traefik"
  type        String   // "proxmox", "vm", "lxc", "container", "service"
  ip          String?
  description String?
  parentId    String?  // For hierarchy (container -> host -> node)
  services    String   @default("[]") // JSON array of services running on this node
  metadata    String   @default("{}") // JSON for additional data

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================================
// Backups
// ============================================================================

model Backup {
  id        String   @id @default(cuid())
  filename  String
  path      String
  size      Int      // bytes
  type      String   // "full", "events_only", "scheduled", "manual"
  status    String   @default("completed") // "pending", "in_progress", "completed", "failed"
  error     String?
  metadata  String   @default("{}") // JSON with stats (event count, etc.)

  createdAt DateTime @default(now())
}

// ============================================================================
// Obsidian Sync State
// ============================================================================

model ObsidianSyncState {
  id            String   @id @default(cuid())
  eventId       String   @unique
  obsidianPath  String   // Path in Obsidian vault
  lastSyncedAt  DateTime
  syncDirection String   // "to_obsidian", "from_obsidian", "bidirectional"
  checksum      String   // MD5 of content for change detection

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================================================
// NextAuth Models
// ============================================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
